import { storageService } from '../services/storage';
import type { Session } from '../models';
import { format } from 'date-fns';
import { ptBR } from 'date-fns/locale';

interface SessionDetailScreenProps {
  session: Session;
  onEdit: () => void;
  onDelete: () => void;
  onViewExercises: () => void;
  onBack: () => void;
}

export function SessionDetailScreen({
  session,
  onEdit,
  onDelete,
  onViewExercises,
  onBack,
}: SessionDetailScreenProps) {
  const [isDeleting, setIsDeleting] = useState(false);
  const [isCompleting, setIsCompleting] = useState(false);

  const handleDelete = () => {
    Alert.alert(
      'Excluir Sess√£o',
      'Tem certeza que deseja excluir esta sess√£o? Esta a√ß√£o n√£o pode ser desfeita.',
      [
        { text: 'Cancelar', style: 'cancel' },
        {
          text: 'Excluir',
          style: 'destructive',
          onPress: async () => {
            setIsDeleting(true);
            try {
              await storageService.deleteSession(session.id);
              Alert.alert('Sucesso', 'Sess√£o exclu√≠da!');
              onDelete();
            } catch (error) {
              console.error('Error deleting session:', error);
              Alert.alert('Erro', 'N√£o foi poss√≠vel excluir a sess√£o');
              setIsDeleting(false);
            }
          },
        },
      ]
    );
  };

  const handleToggleComplete = async () => {
    setIsCompleting(true);
    try {
      if (session.completedAt) {
        // Marcar como n√£o conclu√≠do
        await storageService.updateSession(session.id, {
          completedAt: null,
          needsSync: true,
        });
        Alert.alert('Sucesso', 'Sess√£o marcada como n√£o conclu√≠da!');
      } else {
        // Marcar como conclu√≠do
        await storageService.updateSession(session.id, {
          completedAt: new Date(),
          needsSync: true,
        });
        Alert.alert('Sucesso', 'Sess√£o marcada como conclu√≠da! üéâ');
      }
      onBack(); // Reload the list
    } catch (error) {
      console.error('Error toggling completion:', error);
      Alert.alert('Erro', 'N√£o foi poss√≠vel atualizar a sess√£o');
    } finally {
      setIsCompleting(false);
    }
  };

  const isCompleted = !!session.completedAt;

  return (
    <ScrollView style={styles.container} contentContainerStyle={styles.content}>
      <View style={styles.header}>
        <Button title="‚Üê Voltar" onPress={onBack} variant="outline" size="small" />
      </View>

      <Text style={styles.title}>{session.name}</Text>

      {isCompleted && (
        <Card style={[styles.card, styles.completedCard]}>
          <Text style={styles.completedTitle}>‚úÖ Treino Conclu√≠do!</Text>
          <Text style={styles.completedText}>
            {format(session.completedAt, "dd/MM/yyyy '√†s' HH:mm", { locale: ptBR })}
          </Text>
        </Card>
      )}

      <Card style={styles.card}>
        <Text style={styles.sectionTitle}>üìã Informa√ß√µes</Text>
        
        <View style={styles.infoRow}>
          <Text style={styles.label}>Data Agendada:</Text>
          <Text style={styles.value}>
            {format(session.scheduledAt, "dd/MM/yyyy '√†s' HH:mm", { locale: ptBR })}
          </Text>
        </View>

        {session.notes && (
          <View style={styles.infoRow}>
            <Text style={styles.label}>Observa√ß√µes:</Text>
            <Text style={styles.value}>{session.notes}</Text>
          </View>
        )}

        <View style={styles.infoRow}>
          <Text style={styles.label}>Status:</Text>
          <Text style={[styles.value, styles.statusBadge]}>
            {session.needsSync ? 'üîÑ Pendente sync' : '‚úÖ Sincronizado'}
          </Text>
        </View>
      </Card>

      <Card style={styles.card}>
        <Text style={styles.sectionTitle}>üèãÔ∏è Exerc√≠cios</Text>
        <View style={styles.emptyState}>
          <Text style={styles.emptyIcon}>üí™</Text>
          <Text style={styles.emptyText}>
            Gerencie os exerc√≠cios desta sess√£o de treino
          </Text>
          <Button
            title="üìã Ver Exerc√≠cios"
            onPress={onViewExercises}
            size="small"
            style={styles.addButton}
          />
        </View>
      </Card>

      <View style={styles.actions}>
        <Button
          title={isCompleted ? '‚Ü©Ô∏è Marcar como N√£o Conclu√≠do' : '‚úÖ Marcar como Conclu√≠do'}
          onPress={handleToggleComplete}
          loading={isCompleting}
          disabled={isCompleting}
          fullWidth
        />
        <Button
          title="‚úèÔ∏è Editar"
          onPress={onEdit}
          variant="secondary"
          fullWidth
        />
        <Button
          title="üóëÔ∏è Excluir"
          onPress={handleDelete}
          variant="danger"
          loading={isDeleting}
          disabled={isDeleting}
          fullWidth
        />
      </View>
    </ScrollView>
  );
}

